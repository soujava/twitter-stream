<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>